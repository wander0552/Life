<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_mail_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mail_address"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textColor="@color/primary_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:id="@+id/mail_des"
            android:text="@string/notifyMsg"
            android:layout_below="@id/mail_address"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/mail_stamp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mail_sender"
            android:layout_below="@id/mail_des"
            android:layout_toLeftOf="@+id/mail_stamp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:text="不二先生"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:id="@+id/mail_stamp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/letter_bg1"
            />




    </RelativeLayout>

</android.support.v7.widget.CardView>