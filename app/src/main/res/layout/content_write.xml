<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_write"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wander.life.ui.activity.WriteActivity"
    tools:showIn="@layout/activity_write">


    <ScrollView
        android:id="@+id/edit_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp">


        <EditText
            android:id="@+id/write_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c9c685"
            android:gravity="center_horizontal"
            android:inputType="none"
            android:lineSpacingExtra="@dimen/fab_margin"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/notifyMsg"
            android:textCursorDrawable="@drawable/cursor" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/mark_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mark_layout_height"
        android:layout_alignParentBottom="true"
        android:background="#f2f2f2"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/mark_bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="加粗" />


    </LinearLayout>


</RelativeLayout>
