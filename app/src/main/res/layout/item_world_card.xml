<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/world_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/world_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/primary_text"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/world_card_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@id/world_card_title"
            android:scaleType="centerCrop"
            android:src="@mipmap/charing" />

        <TextView
            android:id="@+id/world_card_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/world_card_img"
            android:text="@string/title_activity_test"
            android:textColor="@color/primary_text"
            android:layout_margin="10dp"

            />
    </RelativeLayout>

</android.support.v7.widget.CardView>